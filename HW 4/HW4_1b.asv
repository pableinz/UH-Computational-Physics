clear;
A = 2;
ms=3;
tspan = [0 3.5];

hold all

y0 = [4 10];
[t,y] = ode45(@(t,y) odefcn(t,y,A), tspan, y0);
plot(t,y(:,1),'x','MarkerSize',ms)
z=sqrt(1./(1+(y0(1)^2./(1-y0(1)^2))*exp(-2*t)));
plot(t,z,'o','MarkerSize',ms)

title('Hopf model theta solution for a=2');

legend('r0=4');
box on

ax=gca;
ax.FontSize=12;

xlabel('t');
ylabel('theta(t)');

saveas(gcf,'HW4_1b_thetasola2','epsc');

hold off
